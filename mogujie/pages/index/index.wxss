page {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.main {
    position: relative;
    width: 100%;
}
.main navigator image {
    width: 100%;
    height: 480rpx;
}
.main input {
    position: absolute;
    top: 20px;
    left: 80px;
    border: 1px solid white;
    border-radius: 15px;
    background-color: white;
}
.main p {
    color: white;
    position: absolute;
    right: 15px;
    top: 20px;
}
swiper {
    height: 238px;
}
.row {
    display: flex;
    justify-content: space-around;
    align-self: center;
    flex-wrap: wrap;
}
.row-col{
    width: 360rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.row-col image {
    max-width: 100%;
}
.detail {
    width: 100%;
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.detail image {
    max-width: 100%;
}